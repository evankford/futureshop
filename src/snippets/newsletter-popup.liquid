<div class="popup-content popup-signup" style="">
  <div class="popup-inner">
    <div class="popup-header">
      <h2>{{settings.signup_title | default: 'Join the list'}}</h2>
      {% if settings.signup_subtitle != blank %}
        <h4>{{settings.signup_subtitle | default: 'Get news, discounts + more when you sign up for the email list!'}}</h4>
      {%endif%}
    </div>
    <div class="form-wrap">
    {% form 'customer' %}

          {{ form.errors | default_errors }}

          {% if form.posted_successfully? %}
            <ul class="form-success">
              <li>{{ 'general.password_page.signup_form_success' | t }}</li>
            </ul>
          {% else %}
            <input type="hidden" name="contact[tags]" value="prospect, footer">
          
          <div class="input-group">
          <label for="email">
              {{ 'general.password_page.signup_form_email_label' | t }}
            </label>
            <input type="email"
              name="contact[email]"
              id="Email"
              spellcheck="false"
              autocomplete="off"
              autocapitalize="off"
              placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}">
          </div>
          <div class="input-group btn-group">
            <button type="submit" name="commit" class="button solid ">{{settings.signup_button_text | default: 'Sign Up'}}</button>
          </div>
          <label class="clearfix large_form" style="font-weight:normal">
            <input type="checkbox" name="customer[accepts_marketing]"  id="accepts_marketing_input" />
            <span class="label-text">I want to receive deals, news, and content from {{shop.name}}.</span>
          </label>
          {% endif %}
        {% endform %}
    </div>
  </div>
</div>