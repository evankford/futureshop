<div class="slide-content">
    <div class="slide-content-inner {% if slide.settings.mega_text == true%} mega-text {%endif%} {% if slide.settings.shadow_text == true%} shadow-text {%endif%}">
      {% if section.settings.content_style == 'boxed' %}
      <div class="logo-wrap">
        {% include 'responsive-image' with image:slide.settings.title_logo, max_width: 1200, max_height: 1200 %}
      </div>
      <div class="content-wrap">
        <header class="common-header type--{{type}}">
        {% if slide.settings.introduction != blank %}
          <h4 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label common-header__introduction">{{ slide.settings.introduction | escape }}</h4>
        {% endif %}
        {% if slide.settings.heading != blank %}
          <h2 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="main-header font--{{settings.font_family_heading}} style--{{settings.header_style}} color--{{settings.header_color}} spacing--{{settings.header_spacing}} common-header__heading">{{ slide.settings.heading | escape }}</h4>
        {% endif %}
        {% if slide.settings.subtitle != blank %}
          <h4 data-aos="fade-in" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 label common-header__subtitle">{{ slide.settings.subtitle | escape }}</h4>
        {% endif %}
      </header>
       <div class="button-wrap">
        {% if slide.settings.button_1_link != empty and slide.settings.button_1_text != empty %}<a href="{{slide.settings.button_1_link}}" class="button inherit">{{slide.settings.button_1_text}}</a>{%endif%}
        {% if slide.settings.button_1_link != empty and slide.settings.button_2_text != empty %}<a href="{{slide.settings.button_2_link}}" class="button inherit">{{slide.settings.button_2_text}}</a>{%endif%}
      </div>

      </div>
      {%else %}
      {% include 'common-header' %}
      <div class="button-wrap">
        {% if slide.settings.button_1_link != empty and slide.settings.button_1_text != empty %}<a href="{{slide.settings.button_1_link}}" class="button inherit">{{slide.settings.button_1_text}}</a>{%endif%}
        {% if slide.settings.button_1_link != empty and slide.settings.button_2_text != empty %}<a href="{{slide.settings.button_2_link}}" class="button inherit">{{slide.settings.button_2_text}}</a>{%endif%}
      </div>
{%endif%}

    </div>