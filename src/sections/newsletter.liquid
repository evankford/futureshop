    "name": "Newsletter",
    "class" : "standard-section",
    "settings": [
      {
        "type" : "header",
        "content" : "Meta"
      },
      {
        "type": "text",
        "id" : "id",
        "label" : "Section ID (for anchor links and specific styling)"
      },
       {
        "type": "text",
        "id" : "title",
