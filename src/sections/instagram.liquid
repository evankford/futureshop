{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Instagram" section on the Theme Editor.

  Theme Store required settings
  - Heading: title of the Instagram section
  - Text: description of the Instagram section
{%- endcomment -%}

{% include 'section-starter' with section_class: 'instagram' %}
<div class="section-inner">
{% assign delay = 0 %}
    {% if section.settings.pre_title != blank or section.settings.title != blank  %}
  <div class="instagram-header section-header">
    {% if section.settings.pre_title != blank %}
      <h4 data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h4 caps section-header__pre_title">{{ section.settings.pre_title | escape }}</h4>
    {% endif %}
    {% if section.settings.title != blank %}
      <h2 data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}" class="h2 section-header__title">{{ section.settings.title | escape }}</h2>
    {% endif %}

  </div>
  {%endif%}
  <div class="embed-wrap">
    {{section.settings.html}}
  </div>
  {% if section.settings.button_url != blank and section.settings.button_text != blank %}
    <div class="button-wrap center" data-aos="fade-up" data-aos-delay="{{delay}}{% assign delay = delay | plus: 50 %}">
      <a href="{{section.settings.button_url}}" class="button accent" target="_blank" rel="nofollow"><i class="icon-instagram"></i> {{section.settings.button_text}}</a>
    </div>

      {%endif%}
      {% if section.settings.include_all_icons == true %}
      <div class="all-social-icons">
        {% include 'social-icons' %}
      </div>
    {%endif%}
  </div>
</section>

