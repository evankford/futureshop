{% for block in section.blocks %}
  {% case block.type %}
    {%when 'divider'%} {% include 'store-divider' %}
    {%when 'featured-collection'%} {% include 'store-collection' %}
    {%when 'richtext'%} {% include 'store-text' %}
    {%when 'categories'%} {% include 'store-categories' %}
    {%else%}
  {%endcase%}
{%endfor %}


{% schema %}
  {
    "name" : "Store Main",
    "class" : "store-main",
    "settings" : [
        {
          "type" : "header",
          "content" : "Settings"
        }
      ],
      "blocks" : [
        {
          "type" : "divider",
          "name" :"Divider",
          "settings" : [
          {
            "type" : "select",
            "id" : "spacing",
            "label" : "Spacing",
            "options" : [
              {
                "value" : "min",
                "label" : "Minimum"
              },
              {
                "value" : "small",
                "label" : "Small"
              },
              {
                "value" : "medium",
                "label" : "Medium"
              },
              {
                "value" : "large",
                "label" : "Large"
              },
              {
                "value" : "extra",
                "label" : "Extra-Large"
              },
              {
                "value" : "huge",
                "label" : "Huge"
              }
            ],
            "default" : "medium"
          },
          {
            "type" : "select",
            "id" : "type",
            "label" : "Style",
            "options" : [
              {
                "value":  "transparent",
                "label" : "Transparent"
              },
              {
                "value":  "border-full",
                "label" : "Border (Full Width)"
              },
              {
                "value":  "border-half",
                "label" : "Border (Half Width)"
              }
            ]
          },
          {
            "type" : "color",
            "id" : "color",
            "label" : "Border Color",
            "info": "If left blank, uses the theme default."
          },
          {
            "type" : "checkbox",
            "id" : "hide_mobile",
            "label" : "Hide on mobile?"
          }
        ]
      },
      {
        "type" : "featured-collection",
        "name" : "Featured Collection",
        "settings" : [
              {
                "type": "text",
                "id": "pre_title",
                "label": "Pre-Heading",
                "default": "Shop Our"
              },
              
              {
                "type": "text",
                "id": "title",
                "label": "Heading",
                "default": "Featured collection"
              },
              {
                "id": "collection",
                "type": "collection",
                "label": "Collection"
              },
              {
                "type" : "header",
                "content" : "Collection settings"
              },
              {
                "type" : "select",
                "id" : "size",
                "label" : "Grid Size",
                "options" : [
                  {
                    "value" : "small",
                    "label" : "Small"
                  },
                  {
                    "value" : "standard",
                    "label" : "Standard"
                  },
                  {
                    "value" : "large",
                    "label" : "Large"
                  }
                ]
              },
              {
                "type" : "range",
                "id" : "limit",
                "label" : "Limit",
                "default" : 8,
                "max": 30,
                "min" : 0,
                "step" : 1
              },
            

                {
                "type" : "text",
                "id" : "button_text",
                "label" : "All Button Text",
                "info" : "Leave Blank for No Button"
              },

                {
                "type" : "url",
                "id" : "button_url",
                "label" : "All Button url",
                "info" : "Leave Blank to use collection link"
              },
              {
                "type" : "header",
                "content" : "Product Settings"
              },
              {
                "type" : "checkbox",
                "id" : "secondary_image",
                "label" : "Second Image on Hover",
                "info" : "No effect if no secondary image"
              },
              {
                "type" : "checkbox",
                "id" : "show_price",
                "label" : "Show Price?",
                "default" : true
              },
              {
                "type" : "checkbox",
                "id" : "simplify",
                "label" : "Simplify?",
                "info" : "Hides everything other than photo!"
              },
              {
                "type" : "checkbox",
                "id" : "hoverer",
                "label" : "Details on hover?"
              }
            ]
      },
      {
        "type" : "richtext",
        "name" : "Text",
        "settings" : [
          {
            "type": "text",
            "id": "pre_title",
            "label": "Pre-Heading",
            "default": "Use this space to"
          },
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "Talk about your brand"
          },
          {
            "type": "richtext",
            "id": "text",
            "label": "Text",
            "default": "<p>Share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
          },
          {
            "type" : "select",
            "id" : "background_style",
            "label" : "Background Style",
            "default" : "cover",
            "options" : [
              {
                "value" : "cover",
                "label" : "Cover"
              },
              {
                "value" : "repeat-x",
                "label" : "Horizontal Tile"
              },
              {
                "value" : "repeat-y",
                "label" : "Vertical Tile"
              },
              {
                "value" : "repeat-all",
                "label" : "Tile"
              },
              {
                "value" : "rellax",
                "label" : "Parallax"
              }
            ]
          }
        ]
      },
      {
        "type" : "categories",
        "name" : "Collections/Categories",
        "settings" : [
           {
              "type" : "header",
              "content" : "Collection list settings"
            },
            {
              "type": "text",
              "id": "pre_title",
              "label": "Pre-Heading",
              "default": "Browse our "
            },
            {
              "type": "text",
              "id": "title",
              "label": "Heading",
              "default": "Featured Collections"
            },
            {
              "type" : "text",
              "label" : "Button Text",
              "id" : "button_text"
            },
            {
              "type" : "checkbox",
              "id" : "overlay",
              "label" : "Overlay style?",
              "default" : true
            },
            {
              "type" : "checkbox",
              "id" : "full_width",
              "label" : "Full Width?"
            },
            {
              "type" : "color",
              "id" : "overlay_color",
              "label" : "Overlay Color",
              "default" :"#000000"
            },
            {
              "type" : "color",
              "id" : "overlay_text_color",
              "label" : "Overlay Text Color",
              "default" :"#FFFFFF"
            },
            {
              "type" : "range",
              "id" :"overlay_op",
              "label" : "Overlay Opacity",
              "default" : 50,
              "step": 5,
              "min": 0,
              "max" : 100
            },
            {
              "type" : "header",
              "content" : "Collections"
            },
            {
              "type" : "collection",
              "id" : "collection1",
              "label" : "Collection 1"
            },
            {
              "type" : "collection",
              "id" : "collection2",
              "label" : "Collection 2"
            },
            {
              "type" : "collection",
              "id" : "collection3",
              "label" : "Collection 3"
            },
            {
              "type" : "collection",
              "id" : "collection4",
              "label" : "Collection 4"
            }
        ]
      }
    ]
  }
{% endschema %}