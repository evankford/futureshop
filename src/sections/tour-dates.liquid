      {
        "type" : "url",
        "id" : "bit_button_url",
        "label" : "More Dates Button url"
      },
       {
        "type" : "header",
        "content" : "Section Settings"
      },
       {
        "type" : "image_picker",
        "id" : "background_image",
        "label" : "Background Image",
