{%- comment -%}
  This is a required section for the Shopify Theme Store.
  It is available when you add "Rich text" section on the Theme Editor.

  Theme Store required settings
  - Heading: title of the rich text section
  - Text: description of the rich text section
{%- endcomment -%}

{% include 'section-starter' with section_class: 'tour-dates' %}
<div class="section-inner tour-section__inner">
  {% assign delay = 0 %}
  <div class="tour-header">
    {% include 'section-header' %}
  </div>
  <div class="tour-main">

    
    {% if section.settings.bit_artist %}
    {% assign limit = section.settings.limit %}
    {% if  section.settings.limit == 0 %} {% assign limit = "" %}{%endif%}
    <div  data-module="tour-widget" data-limit="{{section.settings.limit}}" data-artist={{section.settings.bit-artists}}>
      <h2 class="loader">{{section.settings.tour_loading}}</h2>
      <div class="button-wrap center">
        <a class="button" data-expand-bit data-more-text="{{section.settings.more_button_text}}" data-less-text="{{section.settings.less_button_text}}" href="{{section.settings.bit_button_url}}">{{section.settings.more_button_text}}</a>
      </div>
    {%endif%}
    <div class="error hidden">There was an error retrieving dates. Please try again.</div>
    <div class="fallback hidden">{{section.settings.fallback_text}}</div>
    {% if section.blocks != empty %}
    </a>

    {%endif%}
    {% if section.settings.bit_button_text != blank and section.settings.bit_button_url != blank %}
    <div class="rte-links">
      {% for block in section.blocks %}
        <a href="{{block.settings.url}}" class="simple button">{{block.settings.text}}</a>
      {%endfor %}
    </div>
    {%endif%}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Tour Dates",
    "class" : "standard-section",
    "settings": [
      {
        "type": "text",
        "id": "pre_title",
        "label": "Pre-Heading",
        "default": "Join Johnny"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Talk about your brand"
      },
      {
        "type": "richtext",
        "id": "text",
        "label": "Text",
        "default": "<p>Share information about your brand with your customers. Describe a product, share announcements, or welcome customers to your store.</p>"
      },
       {
        "type" : "header",
        "content" : "Tour Settings"
      },
      {
        "type" : "text",
        "id" :"tour_loading",
        "label" : "Tour Loading Text",
        "default" : "Loading Tour Dates"
      },
      {
        "type" :"text",
        "id" :"more_button_text",
        "label" : "More Dates Button Text",
        "default" : "More Dates"
      },
      {
        "type" :"text",
        "id" :"less_button_text",
        "label" : "Less Dates Button Text",
        "default" : "Less Dates"
      },
      {
        "type" : "text",
        "id" : "bit_artist",
        "label" : "Bandsintown Artist Name",
        "default" : "Keith Urban"
      },
      {
        "type" : "range",
        "id" : "limit",
        "label" : "Limit dates?",
