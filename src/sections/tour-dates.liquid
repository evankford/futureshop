            "value" : "rellax",
            "label" : "Parallax"
          }
        ]
      }
    ],
    "blocks" : [
      {
        "type" : "link",
        "name" : "Link",
        "settings" : [
          {
            "type" :"url",
            "id" : "url",
            "label" : "URL"
          },
          {
            "type" : "text",
            "id" : "text",
            "label" : "Text"
          }
        ]
      }
    ],
    "max_blocks" : 3,
    "presets": [{
