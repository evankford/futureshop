{% include 'section-starter' with section_class: 'content-columns--outer' %}
<div class="section-inner columns-wrap">
  {% for block in section.blocks %}
        {% case block.type %}
        {% when 'code' %}
          {% include 'column-code'%}
        {% when 'text' %}
          {% include 'column-text' %}
        {% when 'image' %}
          {% include 'column-image' %}
        {% when 'textimg' %}
          {% include 'column-textimg' %}
